<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context.xsd">
    
		
		<bean id ="emp1" class ="com.test.Employee" scope="singleton" init-method="initMethod" destroy-method="dMethod">
		<property name="name" value="Saathvik"/>
		<property name="age" value="9"/>
		<property name="grade" value="4th"/>
		</bean>
	     <bean id ="emp2" class ="com.test.Employee" scope="prototype">
		<property name="name" value="Kanthi"/>
		<property name="age" value="17"/>
		<property name="grade" value="11th"/>
		</bean>
</beans>

